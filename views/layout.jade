doctype 5
html(lang='en')
  head
    title NicholasRadford.com
    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    
    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.8.2/jquery.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/underscore.string/2.3.0/underscore.string.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/moment.js/1.7.0/moment.min.js")
    script(src="/js/bootstrap.js")
    
    
    script      
      $(function() {
        // Unescape anything that needs unescaped
        $('.unescape').each(function() {
          $(this).html(_.str.unescapeHTML($(this).html()))
        })
        
        // Convert dates into something readable
        $('.date').each(function() {
          var date = $(this).data('date')
          date = moment(date, 'YYYY-MM-DD')
          $(this).html(date.format('MMM Do YYYY'))
        })
      })
      
  body
    div.container
      div.navbar
        div.navbar-inner
          a.brand(href='/') Nicholas Radford
          ul.nav
            li(data-ref='blog')
              a(href='/') Blog
            li
              a(href='/projects') Projects
            li.pull-right
              a(href='//github.com/nickradford') GitHub
      block content